<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollIndicators="right"
    android:scrollbarStyle="insideOverlay"
    android:scrollbars="vertical">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:textColor="@color/black"
        >

        <SearchView
            android:id="@+id/searchView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:iconifiedByDefault="false"
            android:padding="8dp"
            android:queryHint="Search readers"
            tools:ignore="DuplicateIds" />


        <TextView
            android:id="@+id/friendCountTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Friends: 12 "
            android:layout_marginBottom="15dp"
            android:layout_marginTop="6dp"/>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="22dp"
            android:background="#EDEAE5"
            android:clickable="true"
            android:focusable="true"
            tools:ignore="ExtraText">
            >


            <ImageView

                android:id="@+id/imgProfile1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/img"
                android:background="@drawable/circle"
                android:clipToOutline="true"
                android:scaleType="centerCrop" />


            <TextView
                android:id="@+id/styled_text_view1"
                android:layout_width="214dp"
                android:layout_height="77dp"
                android:layout_marginStart="16dp"
                android:text="Maryl John"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="22dp"
            android:background="#EDEAE5">
            >

            <ImageView
                android:id="@+id/imgProfile2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/img_1"
                android:background="@drawable/circle"
                android:clipToOutline="true"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/styled_text_view2"
                android:layout_width="214dp"
                android:layout_height="77dp"
                android:layout_marginStart="16dp"
                android:text="Thomas Edward"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="22dp"
            android:background="#EDEAE5">
            >

            <ImageView
                android:id="@+id/imgProfile3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/img_2"
                android:background="@drawable/circle"
                android:clipToOutline="true"
                android:scaleType="centerCrop" />
            <TextView
                android:id="@+id/styled_text_view3"
                android:layout_width="214dp"
                android:layout_height="77dp"
                android:layout_marginStart="16dp"
                android:text="Roberto Firmino"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="22dp"
            android:background="#EDEAE5">
            >

            <ImageView
                android:id="@+id/imgProfile4"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/img_3"
                android:background="@drawable/circle"
                android:clipToOutline="true"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/styled_text_view4"
                android:layout_width="214dp"
                android:layout_height="77dp"
                android:layout_marginStart="16dp"
                android:text="Sadio mane"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="22dp"
            android:background="#EDEAE5">
            >

            <ImageView
                android:id="@+id/imgProfile5"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/img_4"
                android:background="@drawable/circle"
                android:clipToOutline="true"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/styled_text_view5"
                android:layout_width="214dp"
                android:layout_height="77dp"
                android:layout_marginStart="16dp"
                android:text="Chris Williamson"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="22dp"
            android:background="#EDEAE5">
            >

            <ImageView
                android:id="@+id/imgProfile6"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/img_5"
                android:background="@drawable/circle"
                android:clipToOutline="true"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/styled_text_view6"
                android:layout_width="214dp"
                android:layout_height="77dp"
                android:layout_marginStart="16dp"
                android:text="Maryl Jhez"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>





    </LinearLayout>



</ScrollView>
