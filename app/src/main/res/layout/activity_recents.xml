<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollIndicators="right"
    android:scrollbarStyle="insideOverlay"
    android:scrollbars="vertical"
    android:background="#EDEAE5">

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#EDEAE5">

    <!-- Top Bar -->
    <TextView
        android:id="@+id/forYouHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text=" Recents "
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="24sp"
        android:background="#FFFFFF" />

    <!-- Static Data for Book Reviews -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Review Item 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:id="@+id/bookCover1"
                android:layout_width="80dp"
                android:layout_height="120dp"
                android:src="@drawable/thegreatgatsby" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/bookTitle1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="The Great Gatsby"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/reviewText1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A classic tale of wealth and betrayal."
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textColor="#666666" />

                <TextView
                    android:id="@+id/reviewerInfo1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reviewed by User123"
                    android:textSize="12sp"
                    android:textColor="#888888" />
            </LinearLayout>
        </LinearLayout>

        <!-- Review Item 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:id="@+id/bookCover2"
                android:layout_width="80dp"
                android:layout_height="120dp"
                android:src="@drawable/tokillamockingbird" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/bookTitle2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="To Kill a Mockingbird"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/reviewText2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A profound commentary on race and injustice."
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textColor="#666666" />

                <TextView
                    android:id="@+id/reviewerInfo2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reviewed by User456"
                    android:textSize="12sp"
                    android:textColor="#888888" />
            </LinearLayout>
        </LinearLayout>

        <!-- Review Item 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:id="@+id/bookCover3"
                android:layout_width="80dp"
                android:layout_height="120dp"
                android:src="@drawable/img_1984" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/bookTitle3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1984"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/reviewText3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A chilling dystopian novel that warns of totalitarianism."
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textColor="#666666" />

                <TextView
                    android:id="@+id/reviewerInfo3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reviewed by User789"
                    android:textSize="12sp"
                    android:textColor="#888888" />
            </LinearLayout>
        </LinearLayout>

        <!-- Review Item 4 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:id="@+id/bookCover4"
                android:layout_width="80dp"
                android:layout_height="120dp"
                android:src="@drawable/prideandprejudice" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/bookTitle4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pride and Prejudice"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/reviewText4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A romantic story that explores themes of class and society."
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textColor="#666666" />

                <TextView
                    android:id="@+id/reviewerInfo4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reviewed by User101"
                    android:textSize="12sp"
                    android:textColor="#888888" />
            </LinearLayout>
        </LinearLayout>

        <!-- Review Item 5 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:id="@+id/bookCover5"
                android:layout_width="80dp"
                android:layout_height="120dp"
                android:src="@drawable/catcherintherye" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/bookTitle5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="The Catcher in the Rye"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/reviewText5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A story about teenage alienation and loss."
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textColor="#666666" />

                <TextView
                    android:id="@+id/reviewerInfo5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reviewed by User202"
                    android:textSize="12sp"
                    android:textColor="#888888" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
</ScrollView>