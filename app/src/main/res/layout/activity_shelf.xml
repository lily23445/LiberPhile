<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDEAE5" >

    <LinearLayout
        android:id="@+id/shelfContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp" >

        <TextView
            android:id="@+id/sectionHeader"
            android:layout_width="381dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="16dp"
            android:text="-ˋˏ SHELF ˎˊ-"
            android:textColor="#514C49"
            android:textSize="25sp"
            android:textStyle="bold" />

        <!-- Read Books Shelf -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Read"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#514C49"
                android:layout_marginTop="16dp" />

            <Button
                android:id="@+id/addReadBookButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:backgroundTint="#514C49"
                android:text="Add Book" />

            <LinearLayout
                android:id="@+id/readBooksList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </LinearLayout>

        <!-- To Be Read Books Shelf -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="To Be Read"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#514C49" />

            <Button
                android:id="@+id/addToReadBookButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Book"
                android:backgroundTint="#514C49" />

            <LinearLayout
                android:id="@+id/toReadBooksList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </LinearLayout>

        <!-- Favorite Books Shelf -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Favorite Books"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#514C49" />

            <Button
                android:id="@+id/addFavBookButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Book"
                android:backgroundTint="#514C49" />

            <LinearLayout
                android:id="@+id/favBooksList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </LinearLayout>

        <!-- Add custom shelf section -->
        <EditText
            android:id="@+id/addShelfTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Enter shelf name"
            android:minHeight="48dp" />

        <Button
            android:id="@+id/createShelfButton"
            android:layout_width="378dp"
            android:layout_height="wrap_content"
            android:text="Create Shelf"
            android:backgroundTint="#514C49" />
    </LinearLayout>

</ScrollView>